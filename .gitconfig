[user]
	name = Ayushman Khazanchi
	email = ayushman.khazanchi@gmail.com
[core]
	editor = vim
	excludesfile = ~/.gitignore
	autocrlf = input
[color]
	branch = auto
	diff = auto
	interactive = auto
	status = auto
[web]
	browser = google-chrome
[credential]
	helper = osxkeychain
[push]
	default = simple
[merge]
	tool = code 
[difftool]
	prompt = false
[alias]
	co = checkout
	cob = checkout -b
	b = branch
	me = merge --no-commit
	st = status
	a = add
	cm = commit -m
	cp = cherry-pick
	amend = commit --amend
	po = push origin -u
	p = pull
	pr = pull --rebase
	df = diff --color
	rsh = reset --soft HEAD^
	rh = reset HEAD
	ls = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate
	ll = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --numstat
	lgraph = log --graph --all --decorate --oneline
